{
  "name": "maeul-in-the-sky",
  "version": "1.3.0",
  "description": "Transform GitHub contributions into animated terrain SVGs",
  "type": "module",
  "bin": {
    "maeul-sky": "./dist/index.js"
  },
  "main": "./dist/lib.cjs",
  "module": "./dist/lib.js",
  "types": "./dist/lib.d.ts",
  "exports": {
    ".": {
      "types": "./dist/lib.d.ts",
      "import": "./dist/lib.js",
      "require": "./dist/lib.cjs"
    }
  },
  "files": [
    "dist",
    "action.yml"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/ tests/",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=20"
  },
  "keywords": [
    "github",
    "contribution",
    "svg",
    "animation",
    "terrain",
    "isometric",
    "visualization",
    "profile",
    "readme"
  ],
  "author": "t1seo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/t1seo/github-profile-maeul.git"
  },
  "homepage": "https://github.com/t1seo/github-profile-maeul",
  "bugs": {
    "url": "https://github.com/t1seo/github-profile-maeul/issues"
  },
  "dependencies": {
    "@actions/core": "^3.0.0",
    "commander": "^14.0.3",
    "simplex-noise": "^4.0.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "overrides": {
    "minimatch": ">=10.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.0",
    "@types/node": "^25.2.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18"
  }
}
